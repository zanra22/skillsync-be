# SkillSync Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Environment Setting
ENVIRONMENT=development

# Secret Keys (Generate secure random keys for each environment)
DEV_SECRET_KEY=your-development-secret-key-here
STAG_SECRET_KEY=your-staging-secret-key-here
PROD_SECRET_KEY=your-production-secret-key-here

# Frontend URLs
DEV_FRONTEND_URL=http://localhost:3000
STAG_FRONTEND_URL=https://staging.skillsync.studio
PROD_FRONTEND_URL=https://skillsync.studio

# Database Configuration - Development
DEV_DB_ENGINE=django.db.backends.postgresql
DEV_DB_NAME=skillsync_dev
DEV_DB_USER=postgres
DEV_DB_PASSWORD=your-dev-db-password
DEV_DB_HOST=localhost
DEV_DB_PORT=5432

# Database Configuration - Production
PROD_DB_ENGINE=django.db.backends.postgresql
PROD_DB_NAME=skillsync_prod
PROD_DB_USER=your-prod-db-user
PROD_DB_PASSWORD=your-prod-db-password
PROD_DB_HOST=your-prod-db-host
PROD_DB_PORT=5432

# Email Configuration - Resend.com
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_g33y1aGk_CyhMaXnUUu32fSJ6cSVAGeM7

# Security Settings
# For production, remove wildcard patterns and use specific domains
# Current ALLOWED_HOSTS includes ".azurewebsites.net" which is overly permissive
# Replace with your actual domains:
# - api.skillsync.studio
# - skillsync.studio

# Rate Limiting Settings (optional)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
